{
  "manifest_version": 3,
  "name": "Text Case Changer",
  "version": "0.9.1",
  "description": "Change Case of selected editable text by context menu.",
  "icons": {
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  }
  "permissions": [
    "management",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
